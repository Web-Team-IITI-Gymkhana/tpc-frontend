{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/store/store.ts",
    "src/components/Students/StudentsTable/StudentTable.tsx",
    "src/middleware.ts",
    "src/components/JAF/JAF.tsx"
, "src/components/NewTableComponent/Table.jsx", "src/components/NewTableComponent/PenaltyModal.jsx"  ],
  "exclude": ["node_modules"]
}
